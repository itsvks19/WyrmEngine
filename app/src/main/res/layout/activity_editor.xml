<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".activities.EditorActivity">

  <include
    android:id="@+id/top_bar"
    layout="@layout/layout_top_bar"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    app:layout_constraintTop_toTopOf="parent" />

  <include
    android:id="@+id/object_list"
    layout="@layout/layout_object_list"
    android:layout_width="190dp"
    android:layout_height="0dp"
    android:visibility="visible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/top_bar" />

  <com.wyrm.engine.core.renderer.WyrmSurface
    android:id="@+id/surface"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/object_list"
    app:layout_constraintTop_toBottomOf="@id/top_bar" />

  <TextView
    android:id="@+id/fov"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:fontFamily="sans-serif-condensed"
    android:text="@string/app_name"
    android:textColor="?colorOnSurface"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/top_bar" />

  <ImageView
    android:id="@+id/backward"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginStart="40dp"
    android:layout_marginBottom="5dp"
    android:contentDescription="@string/app_name"
    android:src="@drawable/switch_button_x_outline"
    android:tintMode="src_in"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/object_list" />

  <ImageView
    android:id="@+id/left"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="-10dp"
    android:contentDescription="@string/app_name"
    android:src="@drawable/switch_button_a_outline"
    android:tintMode="src_in"
    app:layout_constraintBottom_toTopOf="@id/backward"
    app:layout_constraintStart_toEndOf="@id/object_list" />

  <ImageView
    android:id="@+id/right"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="-10dp"
    android:contentDescription="@string/app_name"
    android:src="@drawable/switch_button_y_outline"
    android:tintMode="src_in"
    app:layout_constraintBottom_toTopOf="@id/backward"
    app:layout_constraintStart_toEndOf="@id/left" />

  <ImageView
    android:id="@+id/forward"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginStart="40dp"
    android:layout_marginBottom="-10dp"
    android:contentDescription="@string/app_name"
    android:src="@drawable/switch_button_b_outline"
    android:tintMode="src_in"
    app:layout_constraintBottom_toTopOf="@id/left"
    app:layout_constraintStart_toEndOf="@id/object_list" />

  <ImageView
    android:id="@+id/down"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginEnd="22dp"
    android:layout_marginBottom="10dp"
    android:contentDescription="@string/app_name"
    android:src="@drawable/switch_down_outline"
    android:tintMode="src_in"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

  <ImageView
    android:id="@+id/up"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginEnd="22dp"
    android:layout_marginBottom="10dp"
    android:contentDescription="@string/app_name"
    android:src="@drawable/switch_up_outline"
    android:tintMode="src_in"
    app:layout_constraintBottom_toTopOf="@id/down"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>